# Config.
escape C-t

set barpadding 10 5
set barsticky 1
set gap 5
set ignoreresizehints 1
set onlyborder 1 
set padding 10 10 10 10
set border 3

# Focused window.
set fwcolor #FFFFFF
# Unfocused window.
set bwcolor #000000
set bgcolor #000000
set fgcolor #FFFFFF

set font "Ubuntu Mono:style=Regular:pixelsize=18:antialias=1:hinting=1:hintstyle=3"

bind S split
bind C-S split
bind s hsplit
bind C-s hsplit

# bind c exec urxvt -name sid -fg white -bg black
# bind c exec st -e tmux 
bind c exec urxvt
bind C exec urxvt

# unbind n
# bind n exec ratpoison -c "echo `mpc prev | head -1`"
# bind p exec ratpoison -c "echo `mpc next | head -1`"
# bind o exec mpc toggle
alias lock_screen exec xlock -mode blank -password "What's the password? " -username "What's my name again? " -timeout 10 -font "Monospace"
# These must commands must be in the sudoers file(s).
alias poweroff exec sudo /sbin/poweroff
alias reboot exec sudo /sbin/reboot
alias suspend exec lock_screen ; sudo /usr/bin/loginctl suspend
alias hibernate exec lock_screen ; sudo /usr/bin/loginctl hibernate

bind M-p poweroff
bind M-r reboot
bind M-s suspend
bind M-h hibernate
bind M-l lock_screen

bind Return exec rofi -modi run -show run

alias dmenu_runner exec dmenu_run -p " >>> " -fn "Ubuntu Mono:size=14:antialias=true:autohint=true " -nb '#000000' -nf '#ffffff' -sb '#ffffff' -sf '#000000'
bind C-Return exec dmenu_runner

# Need playerctl.
alias media_toggle exec playerctl -a play-pause
alias media_previous exec playerctl -a previous
alias media_next exec playerctl -a next

bind F6 media_previous
bind F7 media_toggle
bind F8 media_next

alias audio_up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
alias audio_down exec pactl set-sink-volume @DEFAULT_SINK@ -5%
alias audio_mute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bind F10 audio_up
bind F9 audio_down
bind F11 audio_mute
bind C-a exec pavucontrol
#bind XF86AudIomicmute exec
#alias brightness_down exec ~/.config/sdorfehs/brightness.sh -o LVDS-1 -d 5
alias brightness_down exec brightnessctl set 5%-
#alias brightness_up exec ~/.config/sdorfehs/brightness.sh -o LVDS-1 -i 5
alias brightness_up exec brightnessctl set +5%
bind F2 brightness_down
bind F3 brightness_up
alias take_screenshot exec `scrot -e 'mv $f ~/Pictures/Screenshots' && notify-send "Screenshot Taken"`
bind Print take_screenshot
# bind $mod+Print exec --no-startup-id "scrot -ue 'mv $f ~/Pictures/Screenshots'"

# Lock the screen.
#bind L exec pkill -USR1 xidle

# Prevent accidental closes by unbinding lowercase k.
unbind k

# Swap workspaces, but define it in top.
# "win-n"
definekey top s-1 vselect 0   
definekey top s-2 vselect 1
definekey top s-3 vselect 2
definekey top s-4 vselect 3
definekey top s-5 vselect 4
definekey top s-6 vselect 5
definekey top s-7 vselect 6
definekey top s-8 vselect 7
definekey top s-9 vselect 8

# quickly jump to ___
#definekey root 9 exec sdorfehs -c "vselect 0" -c "fselect 2" -c "select 9"

# Tab focus between recent windows.
bind Tab focuslast
bind ISO_Left_Tab focus
bind grave focus

# Act normal but prevent firefox raising itself when links are opened from other
# apps.
#set rudeness 12

# Make sure popups stay centered.
unmanage xmessage
unmanage xprompt
unmanage OpenSSH Authentication Passphrase Request
unmanage dzen title

# Window management bindings.
bind H prevscreen
bind J exchangedown
bind K exchangeup
bind L nextscreen

bind h focusleft
bind j focusdown
bind k focusup
bind l focusright

bind C-k delete
bind C-K kill
#bind w windows
#bind W windows

bing G gmove
set msgwait 7

alias xcompmgr_run exec xcompmgr -CcfF -I-.05 -O-.05 -D2 -t-1 -l-3 -r2.5 -o.5 &
alias trayer_run exec trayer --edge top --align right --SetDockType true --SetPartialStrut true --expand true --width 4 --transparent true --tint 0x000000 --height 29
alias xcompmgr_kill exec killall xcompmgr
alias trayer_kill exec killall trayer

bind C-o exec xcompmgr_run
bind M-o exec xcompmgr_kill
bind C-i exec trayer_run
bind M-i exec trayer_kill

# Startup Configuration
exec xcompmgr -CcfF -I-.05 -O-.05 -D2 -t-1 -l-3 -r2.5 -o.5
exec trayer --edge top --align right --SetDockType true --SetPartialStrut true --expand true --width 4 --transparent true --tint 0x000000 --height 29
exec xwallpaper --clear
exec brightnessctl set 15%
# exec ~/.config/sdorfehs/wallpaper.sh -o LVDS-1 -f ~/Pictures/Wallpapers/Expose.png
# exec trayer --edge top --align right --SetDockType true --SetPartialStrut true --expand true --width 10 --transparent true --alpha 0 --tint 0x292d3e --height 29
exec ~/.config/sdorfehs/status.pl
exec rm /tmp/power.sh.lock
exec ~/.config/sdorfehs/power.sh
exec dunst
# Applets.
exec nm-applet
exec pasystray

